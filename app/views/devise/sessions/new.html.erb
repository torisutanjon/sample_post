<div class="absolute top-0 left-0 h-screen w-screen flex items-center justify-center">
<div class="relative py-6 px-4 flex flex-col items-center justify-start border-[2px] border-black/50 rounded-md">
  <h2 class="text-lg">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mt-4">
    <%= f.label :email, class:"text-sm" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mt-4">
    <%= f.label :password, class:"text-sm" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class:"text-sm" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"mt-2 py-1 px-2 rounded-md bg-green-400 text-sm font-medium" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>